<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="INT1334"
        android:layout_weight="1"
        android:id="@+id/tvMaMH"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:textSize="9dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Cấu trúc dữ liệu và giải thuật"
        android:layout_weight="3"
        android:textSize="12dp"
        android:gravity="center"
        android:id="@+id/tvTenMH" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="3"
        android:layout_weight="1"
        android:textSize="12dp"
        android:gravity="center"
        android:id="@+id/tvSTC" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="10"
        android:textSize="12dp"
        android:id="@+id/tvDiemThi"
        android:gravity="center"
        android:layout_weight="1" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="9.0"
        android:layout_weight="1"
        android:id="@+id/tvDiemTK10"
        android:gravity="center"
        android:textSize="12dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="3.8"
        android:layout_weight="1"
        android:id="@+id/tvDiemTK4"
        android:gravity="center"
        android:textSize="12dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="A"
        android:layout_weight="1"
        android:id="@+id/tvDiemTKC"
        android:gravity="center"
        android:textSize="12dp" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/imgTrangThai"
        android:gravity="center"
        android:src="@drawable/done_20px"/>
    </LinearLayout>
</LinearLayout>